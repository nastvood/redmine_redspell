{
  "name": "Redspissues",
  "description": "Redmine issues",
  "version": "0.3",
  "icons": {
    "128": "assets/icon128.png"
  },
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
      "19": "assets/icon19.png",
      "38": "assets/icon38.png"
    },
    "default_popup": "feed.html"
  },
  "permissions": [
    "*://*/*",
    "tabs",
    "storage"
  ],
  "manifest_version": 2
}

